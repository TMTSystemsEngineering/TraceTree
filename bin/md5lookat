use DB_File ;
use Digest::MD5 ;

require "fileutils.pl" ;
require "miscutils.pl" ;
require "ttutils.pl" ;

$rootpathname = "ttr" ;
while (@ARGV)
{
  $arg = shift ;
  if ($arg =~ /^-([01])$/) { $wantedflag = $1 ; }
  else { $pname = $arg ; }
}
die "Usage:\n  $0 projectname filenamesinproject[...]\n" 
    unless defined $pname ;
$rootdirname = "$rootpathname/$pname" ; 
# NEED SOME WAY TO UNSET AS WELL...

$md5name = "LogsAndData/$pname.md5" ;
print "$0: using $md5name\n" ;
print "looking for flag $wantedflag\n" if defined $wantedflag ;
tie %md5s, "DB_File", $md5name, O_RDWR, 0666, $DB_HASH
    or die "Couldn't open '$md5name': $!\n" ;

foreach $key (sort keys %md5s)
{
  $flagval = $md5s{$key} ;
  ($flag, $val) = getmd5isnewanddigest($flagval) ;
  if (defined $wantedflag) { next unless $flag == $wantedflag ; }
  print "key=$key\tflag=$flag\tval=$val\n" ;
}
untie %md5s ;
# $md5s{$dotfilename} = '1,' . $dotdigest ;

