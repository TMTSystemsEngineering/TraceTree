require "fileutils.pl" ;

@dirlist = getdirlist('ttr/GRACE-FO') ;
print "@dirlist\n" ;

$indexfile = 'moduledots/GRACE-FOTraces/GRACE-FOTracesIndex.html' ;
open H, "> $indexfile" 
    or die "Couldn't open $indexfile for writing: $!\n" ;
    
$header = <<EOH;
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head><title>GRACE-FO Module Traces</title>
</head>
<body>
  <h2>GRACE-FO Module Traces</h2>
  <p>CAVEAT: some of these images may be compressed so their hover-maps don't work - but probably doesn't apply to GRACE-FO</p>
  <p>Many objects in DOORS are missing short text titles</p>

  <p>All in GRACE-FO:</p>
EOH

print H $header ;

foreach $dir (@dirlist)
{
  print "$dir\n" ;
  print H "<A HREF=\"$dir.html\">$dir</A><br>\n" ;
  $cmd = "makemoduledots GRACE-FO $dir" ;
  system $cmd ;
  
}

print H "</body>\n</html>\n" ;
close H ;
# system "open $indexfile" ;

print  "Doing attr [STD] Key/Driver value K now\n" ;
system "makeattrdots GRACE-FO '\\[STD\\] Key/Driver' '^(K|D)$'" ;

########################################################################
# Now upload.  Very location-dependent.  But this is all special-case  #
# anyway, no? First delete the dots and maps - they don't need to be   #
# uploaded.                                                            #
########################################################################
$dest='ttr/GRACE-FO' ;
system "rm -v moduledots/GRACE-FOTraces/*.dot moduledots/GRACE-FOTraces/*.map" ;
system "rsync -av moduledots/GRACE-FOTraces/* $dest" ;

system "rm -v attrdots/GRACE-FOAttributeTraces/*.dot attrdots/GRACE-FOAttributeTraces/*.map" ;
system "rsync -av attrdots/GRACE-FOAttributeTraces/* $dest" ;
