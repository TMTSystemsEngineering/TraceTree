require "fileutils.pl" ;

use Digest::MD5 ;
use DB_File ;

@list = getfilelist (".") ;
@flist = grep  (-f, @list) ;
print "n \@flist = " . scalar(@flist) . "\n" ;

tie %md5s, "DB_File", "md5s.db", O_RDWR|O_CREAT, 0666, $DB_HASH 
    or die "Cannot open file 'md5s.db': $!\n";

foreach $fname (@flist)
{
  open IN, $fname or die "COuldn't open $fname for reading: $!\n" ;
  $md5 = Digest::MD5->new;
  $md5->addfile(*IN) ;
  $digest = $md5->hexdigest;
  $md5s{$fname} = $digest ;
  close IN ;
  print "$digest\t$fname\n" ;
}
untie %md5s ;

